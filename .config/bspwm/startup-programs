#!/bin/sh

numlockx &
setxkbmap fr &
picom &

if pidof -x "polybar" >/dev/null; then
   echo "polybar already running"
else
   "$HOME/.config/polybar/launch.sh" &
fi;

nm-applet &
alacritty &
"$HOME/bin/bspwm-wallpaper-changer" --source local --sleep 300 --path /home/augustin64/Pictures/wallpaper/ &

if pidof -x "redshift" >/dev/null; then
   echo "redshift already running"
else
    redshift -l 43.1749:5.2251 &
fi

libinput-gestures-setup start
thinkmorse "bsp" &
xinput set-prop 14 "Device Enabled" 0
