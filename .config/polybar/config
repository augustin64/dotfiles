[module/time]
type = internal/date
interval = 60
format = <label>
format-background = ${colors.background}

date = %H:%M
date-alt = %{F#5da3c3}󰃭 %a, %b %d%{F-}

label = %date%
label-foreground = #b1b4ba
format-padding = 1


[module/mem]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format = <label>
format-prefix = " ﬙ "
label = %output% MB
label-padding = 1
format-prefix-foreground = #dfb14f


