[module/kdeconnect]
type = custom/script
exec = "/home/augustin64/.config/polybar/polybar-kdeconnect/polybar-kdeconnect.sh -d"
tail = true


[module/bspwm-id]
type = custom/script
exec = bspc query -D -d focused --names
tail = true
interval = 0.25


[module/sncf-speed]
type = custom/script
exec = "$HOME/bin/sncf-speed"
interval = 10


