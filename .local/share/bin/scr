#!/bin/bash

filename="$HOME/Pictures/Screenshots/$(date +%Y%m%d_%H%M.jpg)"

if [[ "$1" == "t" ]];then
    UNCLUTTER=1
    killall unclutter || UNCLUTTER=0
    import "$filename"
    if [[ $UNCLUTTER == 1 ]]; then
        unclutter -idle 1 -jitter 2 -root &
    fi;
else
    scrot "$filename"
fi;

sleep 1
notify-send "Capture d'écran sauvegardée" "$filename" -i "$filename" -u low
