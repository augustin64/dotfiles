#!/bin/bash
source "$HOME/.config/dotfiles/load.sh"

if [[ $(adb reverse --list) == *"(reverse) tcp:5900 tcp:5900"* ]]; then
    echo "Le serveur VNC est allumé, je ne touche à rien !"
    exit 0
fi;

external_monitor=$(xrandr -q | grep "$EXTERNAL")

echo "$external_monitor"
if [[ "$external_monitor" == *"disconnected"* ]]; then
    if pidof -x bspwm >/dev/null; then
        bspc monitor "$INTERNAL" -d 1 2 3 4 5 6 7 8 9 0
    fi;
    xrandr \
        --output "$INTERNAL" \
        --primary \
        --mode "$INTERNAL_DIM" \
        --rotate normal &&
    xrandr \
        --output "$EXTERNAL" \
        --off
else
    echo "activating external screen";
    xrandr \
        --output "$INTERNAL" \
        --primary \
        --mode "$INTERNAL_DIM" \
        --rotate normal \
        --output "$EXTERNAL" \
        --mode "$EXTERNAL_DIM" \
        --rotate normal \
        --right-of "$INTERNAL"
    if pidof -x bspwm >/dev/null; then
        bspc monitor "$EXTERNAL" -d 6 7 8 9 0
        bspc monitor "$INTERNAL" -d 1 2 3 4 5
    fi;
fi;

