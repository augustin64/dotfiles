#!/usr/bin/zsh
. "$HOME/.config/dotfiles/load.sh"
. "$HOME/.cache/wal/colors.sh"

[[ $1 ]] || set -- "$WALLPAPER"

echo "locktext=\"${USER}@$(hostname)\"
font=\"iosevka\"
time_format=\"%H:%M\"
loginbox=\"${color0[2,7]}66\"
greetercolor=\"${color8[2,7]}ff\"
" > "$HOME/.config/betterlockscreenrc"

betterlockscreen -l dim -u "$1"
